<article class="col-md-4 col-md-offset-4">
  <div class='archivo'>
    <p><img src="/images/logo.png" class="img-responsive"></img></p>
    <h2>Archivo Digital de Prensa</h2>
  </div>

  <% if (request.ssl? || Rails.env.development?) && resource %>
    <%= simple_form_for(
      resource, as: resource_name, url: session_path(resource_name)) do |f| 
    %>
      <div class="form-inputs">
        <%= f.input :email, required:  false, autofocus: true, 
          label: "Correo Electrónico"
        %>
        <%= f.input :password, required: false, label: "Clave" %>
        <%= f.input :remember_me, as: :boolean, boolean_style: :nested,
          inline_label: "Recuerdeme" if devise_mapping.rememberable? 
        %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Iniciar Sesión" %>
      </div>
    <% end %>
  <% else %>
    <h3>Favor 
      <% urlop = Rails.configuration.action_mailer.default_url_options %>
      <%= puts "urlop=", urlop %>
      <%= link_to 'usar este enlace para registrarse', 
        new_usuario_registration_url(urlop) 
      %>
    </h3>
  <% end %>
  <div class="local">
    <%= render "sip/hogar/local" %>
  </div>
</article>

